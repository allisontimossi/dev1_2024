@page
@model ProdottiModel
@{
    ViewData["Title"] = "Prodotti";
}

<h1>@ViewData["Title"]</h1>

<div>
    <form method ="get">
            <div class="form-group">
            <label for="minPrezzo">Min Prezzo</label>
            <input type="text" class ="form-control" name="minPrezzo" />
            </div>
            <div class="form-group">
            <label for="maxPrezzo">Max Prezzo</label>
            <input type="text" class ="form-control" name="maxPrezzo" />
            </div>
            <button type="submit" class="btn btn-primary">Filtra</button>
    </form>

    <br>
<table class ="table">
    <thread>
        <tr>
            <th></th>
            <th>Nome</th>
            <th> Dettagli</th>
            <th>Prezzo</th>
            <th>Link</th>
        </tr>
    </thread>
    <tbody>
        @foreach (var prodotto in Model.Prodotti)
        {
            <tr>
                <td><img src="@prodotto.Immagine" alt ="@prodotto.Nome" width="200" height="200" /></td>
                <td>@prodotto.Id</td>
                <td>@prodotto.Nome</td>
                <td>@prodotto.Prezzo</td>
                <td><a asp-page ="ProdottoDettaglio" asp-route-id="@prodotto.Id" asp-route-nome="@prodotto.Nome" asp-route-prezzo="@prodotto.Prezzo" asp-route-immagine="@prodotto.Immagine">Dettaglio</a></td>
            </tr>
        }
    </tbody>
</table></div>