<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _02___Pagina_razor_prodotti</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_02___Pagina_razor_prodotti.styles.css" asp-append-version="true" />
</head>
<body>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Sito dove si vendono cose</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Prodotti">Prodotti</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/AggiungiProdotto">Aggiungi prodotto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/ModificaProdotto">Modifica prodotto</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - _02___Pagina_razor_prodotti - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

<footer class="page-footer" style="filter:none">
    <div></div>
    <div class="main-footer">
        <div class="footer-content-middle">
            <div class="container-fluid">
                <div class="footer content">
                    <div class="container" style="padding-top: 50px; padding-bottom: 50px; max-width: 1000px;">
                        <div class="row text-center">
                            ::before
                            <div class="col-sm-6">QUALCOSA</div>
                            <div class="col-sm-6">QUALCOSA</div>
                            <div class="col-sm-6"></div>
                            <div class="col-sm-6"></div>
                            ::after
                        </div>
                    </div>
                    <div class="footer-content-bottom">
                        <div class="container">
                            <div class="row">
                                QUALCOSA
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</footer>
</body>
</html>